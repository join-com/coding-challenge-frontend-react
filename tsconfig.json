{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./app/",
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es2015",
            "es2016",
            "es2018",
            "esnext"
        ]
    },
    "include": [
        "./*",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
